<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.ruskiikot.mentoria01.ui.home.filmlisting.FilmListingFragment"
        android:label="@string/title_home"
        tools:layout="@layout/view_film_listing">
        <action
            android:id="@+id/action_navigation_home_to_filmInfoDialog"
            app:destination="@id/filmInfoDialog"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popUpTo="@id/navigation_home"
            app:popUpToInclusive="false"></action>
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.ruskiikot.mentoria01.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.ruskiikot.mentoria01.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <dialog
        android:id="@+id/filmInfoDialog"
        android:name="com.ruskiikot.mentoria01.ui.home.filminfodialog.FilmInfoDialog"
        android:label="FilmInfoDialog"
        tools:layout="@layout/dialog_info_film">
        <argument
            android:name="itemValue"
            app:argType="com.ruskiikot.mentoria01.network.model.FilmRaw" />
    </dialog>


</navigation>